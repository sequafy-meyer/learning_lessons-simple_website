{
  "variables": {
    "httpdVersion": "2.4.46",
    "phpVersion": "7.4"
    },
  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-central-1",
    "source_ami": "ami-03c3a7e4263fd998c",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "website_ami_{{timestamp}}",
    "associate_public_ip_address": "true"
    }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sudo yum -y update",
    "sudo yum -y install httpd-{{user `httpdVersion`}}",
    "sudo yum -y install amazon-efs-utils",
    "sudo amazon-linux-extras enable php{{user `phpVersion`}}",
    "sudo yum -y clean metadata",
    "sudo yum -y install php-cli php-pdo php-fpm php-json php-mysql php-pecl-apcu mariadb",
    "sudo systemctl enable httpd",
    "sudo systemctl start httpd",
    "sudo mkdir /srv/data",
    "sudo sed -i 's/index.html/index.php/g' /etc/httpd/conf/httpd.conf",
    "sudo sed -i 's/\/var\/www\/html/\/srv\/data/g' /etc/httpd/conf/httpd.conf"]
    }]
}
